
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
@*<link href="~/css/pay.css" rel="stylesheet" />*@

<style>
    .design {
        font-family: "Times New Roman", Times, serif;
        font-size: 20px;
        padding: 0 0 0 20px;
        box-shadow: inset 1px 0 0 #5f5f5f;
        height: 100%;
    }

    .content.design {
        position: relative;
    }

        .content.design input {
            position: absolute;
            bottom: 0;
            left: 40%;
        }
</style>

<div class="container">
    <div class="row">
        <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <address>
                        <strong>Zeal Education</strong>
                        <br>
                        212-214 Nguyen Dinh Chieu
                        <br>
                        Ward 6, District 3, HCM City
                        <br>
                        <abbr title="Phone">P:</abbr> +84123456789
                    </address>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p>
                        <em>Date: @(DateTime.Now)</em>
                    </p>
                    <p>
                        <em>Receipt #: 34522677W</em>
                    </p>
                </div>
            </div>
            <div class="content">
                <div class="text-center">
                    <h1>Receipt</h1>
                </div>
                <form action="@ViewBag.postUrl" method="post">
                    @*thong tin thanh toan*@
                    <input type="hidden" name="upload" value="1" />
                    <input type="hidden" name="return" value="@ViewBag.returnUrl" />
                    <input type="hidden" name="cmd" value="_cart" />
                    <input type="hidden" name="business" value="@ViewBag.business" />
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-9"><em>@ViewBag.pays.Title</em></td>
                                <td class="col-md-1" style="text-align: center"> 1 </td>
                                <td class="col-md-1 text-center">@ViewBag.pays.Fee</td>
                                <td class="col-md-1 text-center">@ViewBag.pays.Fee</td>
                            </tr>
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right">
                                    <p>
                                        <strong>Subtotal: </strong>
                                    </p>
                                    <p>
                                        <strong>Tax: </strong>
                                    </p>
                                    <p>
                                        <strong>Discount: </strong>
                                    </p>
                                </td>
                                <td class="text-center">
                                    <p>
                                        <strong>@ViewBag.pays.Fee</strong>
                                    </p>
                                    <p>
                                        <strong>$0</strong>
                                    </p>
                                    <p>
                                        <strong>@ViewBag.pays.Discount</strong>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right"><h4><strong>Total: </strong></h4></td>
                                <td class="text-center text-danger"><h4><strong>@ViewBag.pays.Total</strong></h4></td>
                            </tr>
                        </tbody>
                    </table>
                    <input type="hidden" name="item_number_1" value="@ViewBag.pays.PayId" />
                    <input type="hidden" name="item_name_1" value="@ViewBag.pays.Title" />
                    <input type="hidden" name="amount_1" value="1" />
                    <input type="hidden" name="quantity_1" value="@ViewBag.pays.Total" />
                    @if (@ViewBag.pays.PayStatus)
                    {
                        <button type="text" class="btn btn-success btn-lg btn-block" disabled>
                            Paid
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success btn-lg btn-block">
                            Pay Now   <span class="glyphicon glyphicon-chevron-right"></span>
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

